{
    "title": "Input schema for Glassdoor jobs actor",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrl": {
            "title": "URL",
            "type": "string",
            "description": "URL to start with",
            "editor": "textfield",
            "pattern": "https:\\/\\/(www\\.)?glassdoor\\.com\\/Job.+"
        },
        "query": {
            "title": "Query",
            "type": "string",
            "description": "Job Title, Keywords, or Company",
            "editor": "textfield",
            "prefill": "CEO"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "City, country or zip code",
            "prefill": "",
            "editor": "textfield"
        },
        "locationstate": {
            "title": "Location state",
            "type": "string",
            "description": "Location state (abbreviation)",
            "prefill": "",
            "editor": "textfield"
        },
        "maxResults": {
            "title": "Maximum results",
            "type": "integer",
            "description": "Limit number of results",
            "minimum": 0,
            "prefill": 30
        },
        "proxy": {
            "title": "Proxy configuration",
            "type": "object",
            "description": "Select proxies to be used by your crawler.",
            "prefill": { "useApifyProxy": true },
            "editor": "proxy",
            "sectionCaption": "Advanced settings"
        }
   },
    "required": ["proxy"]
}
